<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>distribution</id>
    <baseDirectory></baseDirectory>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>src/main/content/distribution</directory>
            <outputDirectory/>
            <filtered>true</filtered>
            <includes>
                <include>grid-library.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/pgsql</directory>
            <outputDirectory>${project.artifactId}</outputDirectory>
            <filtered>false</filtered>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>

